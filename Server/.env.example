# Node Environment
NODE_ENV=development
PORT=5000

# Database (Local PostgreSQL for development)
# For production, use Supabase or other cloud provider
DATABASE_URL=postgresql://postgres:password@localhost:5432/cryptguard

# Storage (Cloudflare R2)
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=cryptguard-files

# Cache (Upstash Redis)
REDIS_URL=redis://localhost:6379

# Email (Resend)
RESEND_API_KEY=re_your_api_key

# JWT Secrets (generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))")
JWT_SECRET=your_jwt_secret_here
JWT_REFRESH_SECRET=your_refresh_secret_here

# CORS
CORS_ORIGIN=http://localhost:5173

# Monitoring (Optional - Grafana Cloud)
GRAFANA_PROMETHEUS_URL=
GRAFANA_PROMETHEUS_USER=
GRAFANA_PROMETHEUS_PASSWORD=
